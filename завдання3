#include <iostream>
#include <cmath>

void task3() {
    std::cout << "\n--- Завдання 3: Піднесення до квадрату та Bubble Sort ---" << std::endl;
    const int SIZE = 5;
    int arr[SIZE];

    // Введення елементів масиву
    std::cout << "Введіть " << SIZE << " цілих чисел:" << std::endl;
    for (int i = 0; i < SIZE; ++i) {
        std::cout << "Елемент [" << i << "]: ";
        std::cin >> arr[i];
    }
    
    std::cout << "Масив до піднесення до квадрату: ";
    for (int x : arr) std::cout << x << " ";
    std::cout << std::endl;

    // Піднесення до квадрату всіх елементів
    for (int i = 0; i < SIZE; ++i) {
        arr[i] = std::pow(arr[i], 2);
    }
    
    std::cout << "Масив після піднесення до квадрату: ";
    for (int x : arr) std::cout << x << " ";
    std::cout << std::endl;

    // Сортування методом обміну (Bubble Sort)
    bool swapped;
    for (int i = 0; i < SIZE - 1; ++i) {
        swapped = false;
        for (int j = 0; j < SIZE - 1 - i; ++j) {
            // Якщо поточний елемент більший за наступний, міняємо їх місцями
            if (arr[j] > arr[j + 1]) {
                std::swap(arr[j], arr[j + 1]);
                swapped = true;
            }
        }
        // Якщо за прохід не було обмінів, масив відсортовано
        if (!swapped) break;
    }

    std::cout << "Масив після сортування (Bubble Sort): ";
    for (int x : arr) std::cout << x << " ";
    std::cout << std::endl;
}
